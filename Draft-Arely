//* My Objectives for the Users:
	//* Search through WMS-based on all item details (i.e., ID, Name, Producer)
	//* Save a list of favorite items
	//* Request for borrowing/buying some items for a specific time (i.e., borrowing item A for 3 weeks)
	//* View the history of borrowed items
	//* Provide an Exit function and thanks to the user for using this software
	//* Show warnings if:
		//* Admin tries to add a new item to the librry with a pre-exisiting ID
		//* Guest User tries to borrow more than 3 items
		//* A User's search request returns null items


//* Code for WMS Search	
#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void main (void)
{
	char name[30];
	int edit;
	char type[20];
	char store[20];
	char pick[20];
	int ID;
	char comment [100];
	int qty;
	char place [100];
	float price;
	
	
	printf("Select the following options: \n");
	printf("1: Search for Item(s)\n");
	printf("2: Request for Borrowing or Buying Item(s)\n");
	printf("3: Save a List of Items\n");
	printf("4: View History of Borrowed items\n");
	printf("Selection :"); 
	scanf("%d",&edit);
	
	switch (edit)
	{
		case 1:
		printf("Please enter the following information\n");
		char temp;
		
			//Enter Item Name
		printf("Enter Item Name: ");
		scanf("%c",&name); //clears buffer
		scanf("%[^\n]",&name);
		
			//Enter product type 
		printf("Item Type:");
		scanf("%s", &type);
		
			//Enter Time stored
		printf("Enter Stored Time (M/D/Y H:M): ");
		scanf("%c",&store); //clears buffer
		scanf("%[^\n]",&store);
		
			//Enter Pickout time
		printf("Enter Picked Time (M/D/Y H:M): ");
		scanf("%c",&pick); //clears buffer
		scanf("%[^\n]",&pick);
				
			//Enter Comments 
		printf("Enter comment: ");
		scanf("%c",&temp); //clears buffer
		scanf("%[^\n]",&comment);
			
			//Enter Quatity
		printf("Enter Quatity: ");
		scanf("%d",&qty);
			
			//Enter Item Location
		printf("Enter Location: ");
		scanf("%c",&place); //clears buffer
		scanf("%[^\n]",&place);
			
				//Price
		printf("Enter Price: ");
		scanf("%f",&price);
			
			printf("Name: %s\n", name);
			printf("Item type: %s\n",type); 
			printf("Stored: %s\n", store);
			printf("Pick up: %s\n", pick);
			printf("comment: %s\n", comment);
			printf("Quatity: %d\n", qty);
			printf("location: %s\n", place);
			printf("Price: %.2f", price);
			
			
			FILE *fptr;
			fptr = fopen(name,"w");
			fprintf(fptr,"%s\n%s\n%s\n%s\n%s\n%d\n%s\n%.2f\n"
			,name,type,store,pick,comment,qty,place,price);
			fclose(fptr);
			
		break;
		
		case 2:
		
		printf("Please Enter the Item you would like to delete:");
		scanf("%c",&name);
		scanf("%[^\n]",&name);
		remove(name);
		
		break;
		
		case 3:
		printf("Please Enter the Item you would like to edit:");
		
		
		break;
		
		case 4:
		----
	}
}

